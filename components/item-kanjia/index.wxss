.kanjia-container {
  font-family: PingFangSC-Regular;
  background-color: #fff;
  padding: 30rpx;
}
.product-name {
  font-size: 30rpx;
  color: #333333;
}
.bd {
  background: #FFFFFF;
  box-shadow: 0 5rpx 5rpx 3rpx rgba(229,229,229,0.50);
  border-radius: 10rpx;
}
.timer {
  width: 690rpx;
  height: 100rpx;
  background: #FFEFEE;
  padding: 25rpx 18rpx 30rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #E83221;
  font-family: "PingFangSC-Medium";
}
.timer text {
  width: 44rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  color: #FFFFFF;
  background: #E83221;
  border-radius: 4rpx;
  margin: 0 12rpx;
  display: inline-block;
}
.pd30 {
  padding: 30rpx;
}

.kanjia-jindu {
  width: 630rpx;
  margin: 0 auto;
  padding-bottom: 30rpx;
  padding-top: 10rpx;
}
.rate-line {
  width: 630rpx;
  margin-bottom: 30rpx;
  position: relative;
}
.rate-line1 {
  width: 100%;
  height: 20rpx;
  border-radius: 12rpx;
  background: #FFEFEE;
}
.rate-line2 {
  height: 20rpx; 
  width: 300rpx;
  position: absolute;
  left: 0;
  top: 0;
  border-radius: 12rpx;
  background: #E83221;
}
.rate-line2 text {
  width: 14rpx;
  height: 14rpx;
  background-color: #FFFFFF;
  position: absolute;
  right: 4rpx;
  top: 3rpx;
  border-radius: 50%;
}
/* self砍价失败 || other砍价结束（成功，失败） */
.rate-line3 {
  background: #CCCCCC;
}
.price-box {
  font-size: 24rpx;
  overflow: hidden;
  color: #E83221;
  font-family: "PingFangSC-Medium";
}
.price-box .fl {
  border: 1rpx solid #E83221;
  padding: 2rpx 6rpx;
}





.bt-btn {
  display: flex;
  color: #fff;
  font-size: 28rpx;
}
.btn {
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #E83221;
  border-radius: 45rpx;
  width: 470rpx;
}
.btn-l, .btn-r {
  width: 240rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  background-color: #333333;
  border-radius: 44rpx 0 0 44rpx;
}
.btn-r {
  background: #E83221;
  border-radius: 0 44rpx 44rpx 0;
}
.btn-fail {
  background-color: #ccc;
}