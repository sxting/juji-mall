.modal { position: fixed; width: 100%; left: 0; top: 0; height: 100%; background-color: rgba(0, 0, 0, 0.3); z-index: 1 }
.registerBox { position: fixed; width: 80%; left: 10%; top: 50%; background-color: #fff; border-radius: 20rpx; z-index: 2; height: 360rpx; margin-top: -180rpx; padding: 30rpx; box-sizing: border-box; }
.icon_close { width: 24rpx; height: 24rpx; position: absolute; top: 30rpx; right: 20rpx; }
.logo { width: 100rpx; height: 100rpx; margin: 10rpx auto 20rpx; display: block; }
.logoTxt { font-size: 30rpx; color: #333; text-align: center; width: 100%; display: block; margin-bottom: 30rpx; }
.registerBtn { width: 100%; height: 80rpx; background-color: #fff; border: 1rpx solid #B55FFF; font-size: 28rpx; border-radius: 10rpx; color: #B55FFF; padding: 0; line-height: 80rpx; text-align: center; }