/* pages/activities/my-collage/index.wxss */

page {
  box-sizing: border-box;
  height: 100%;
  background-color: #fbfbfb;
}
.orderInfo1{background-color:#fff;position:relative;overflow:hidden;margin-bottom:20rpx;padding-bottom:0!important}
.orderInfo1 .info{padding:30rpx;background-color:#fbfbfb;border-radius:10rpx}
.collage-num{
  width: 76rpx;
  height: 36rpx;
  background-color: #FFDB00;
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #333333;
  line-height: 36rpx;
  text-align: center;
  margin-top: 18rpx
}
.goodImg {
  width: 220rpx;
  height: 200rpx;
  border-radius: 8rpx;
  border: 1rpx #eee solid;
}

.goodMsg {
  margin-left: 30rpx;
  position: relative;
  height: 200rpx
}

.goodTit {
  font-size: 28rpx;
}

.goodAmount {
  font-size: 34rpx;
  color: #e83221;
  font-weight: bold;
  position: absolute;
  bottom: 0;
  left: 0
}

.goodAmount text.origin {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.goodMsg .num {
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  color: #999;
  font-size: 22rpx;
}

.barDiv {
  background-color: #fbfbfb;
  border-radius: 10rpx;
}


.orderInfo3 {
  background-color: #fff;
  padding-bottom: 20rpx;
  padding-top: 20rpx;
}

.orderInfo3 .tit {
  line-height: 50rpx;
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
}

.orderInfo3 .txt {
  line-height: 50rpx;
  font-size: 26rpx;
  color: #999;
}

.orderInfo3 .btn {
  width: 70rpx;
  height: 40rpx;
  border: #999 1rpx solid;
  border-radius: 4rpx;
  font-size: 22rpx;
  color: #333;
  position: absolute;
  top: 0;
  right: 20rpx;
}
.collage-box{
  padding: 50rpx 30rpx 40rpx;
} 

.yongkaxuzhi-wrap { width: 100%; box-sizing: border-box; margin-top: 30rpx; }
.yongkaxuzhi { background-color: #fff; width: 100%; padding: 34rpx 30rpx; box-sizing: border-box; }
.row { display: flex; align-items: center; }
.line { width: 100%; height: 1rpx; background-color: #eeeeee; }
.phone{
  width: 30rpx;
  height: 30rpx 
}