/* pages/activities/my-collage/index.wxss */

page {
  box-sizing: border-box;
  height: 100%;
  background-color: #fbfbfb;
}
.orderInfo1{background-color:#fff;position:relative;overflow:hidden;margin-bottom:20rpx;padding-bottom:0!important}
.orderInfo1 .info{padding:30rpx;background-color:#fbfbfb;border-radius:10rpx}
.collage-num{
  width: 76rpx;
  height: 36rpx;
  background-color: #FFDB00;
  font-family: PingFangSC-Medium;
  font-size: 22rpx;
  color: #333333;
  line-height: 36rpx;
  text-align: center;
  margin-top: 18rpx
}
.goodImg {
  width: 220rpx;
  height: 200rpx;
  border-radius: 8rpx;
  border: 1rpx #eee solid;
}

.goodMsg {
  margin-left: 30rpx;
  position: relative;
  height: 200rpx
}

.goodTit {
  font-size: 28rpx;
}

.goodAmount {
  font-size: 34rpx;
  color: #e83221;
  font-weight: bold;
  position: absolute;
  bottom: 0;
  left: 0
}

.goodAmount text.origin {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #999;
  text-decoration: line-through;
}

.goodMsg .num {
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  color: #999;
  font-size: 22rpx;
}

.barDiv {
  background-color: #fbfbfb;
  border-radius: 10rpx;
}


.orderInfo3 {
  background-color: #fff;
  padding-bottom: 20rpx;
  padding-top: 40rpx;
}

.orderInfo3 .tit {
  line-height: 50rpx;
  color: #333;
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 30rpx
}

.orderInfo3 .txt {
  font-family: PingFangSC-Regular;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx
}

.orderInfo3 .btn {
  width: 70rpx;
  height: 40rpx;
  border: #999 1rpx solid;
  border-radius: 4rpx;
  font-size: 22rpx;
  color: #333;
  position: absolute;
  top: 0;
  right: 20rpx;
}
.collage-box{
  padding: 50rpx 30rpx 40rpx;
} 

.yongkaxuzhi-wrap { width: 100%; box-sizing: border-box; margin-top: 30rpx; }
.yongkaxuzhi { background-color: #fff; width: 100%; padding: 34rpx 30rpx; box-sizing: border-box; }
.row { display: flex; align-items: center; }
.line { width: 100%; height: 1rpx; background-color: #eeeeee; }
.phone{
  width: 30rpx;
  height: 30rpx 
}
.jc-sb { justify-content: space-between; }
.btns {
  text-align: center;
  margin-top: 40rpx
}
.btns text{
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
}
.success-btn,.ing-btn{
  background-color: #E83221;
  color: #fff;
  font-family: PingFangSC-Medium;
  font-size: 34rpx;
  display: block;
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
}
.fail-btn{
  height: 86rpx;
  border: 1rpx solid #E83221;
  color: #E83221;
}
.title-text{
  text-align: center
}
.situation-box{
  text-align: center;
}
.situation-box .text-describe{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #333333;
  letter-spacing: 0;
  margin-top: 30rpx;
  margin-bottom: 60rpx;
  display: block
}
.situation-box .text-describe text{
  color: #E83221;
}
.last-time{
  font-family: PingFangSC-Regular;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 30rpx
}
.last-time text{
  display: inline-block;
  background-color: #E83221;
  border-radius: 10rpx; 
  width: 44rpx;
  height: 40rpx;
  font-family: SFNSDisplay;
  font-size: 26rpx;
  color: #FFFFFF;
  letter-spacing: 0;
}
.head-portrait-box{
  text-align: center
}
.head-portrait-box .head-portrait{
  display: inline-block;
  margin-right: 40rpx;
  width:99rpx;
  height:99rpx;
  position: relative
}
.head-portrait-box .head-portrait:last-of-type{
  margin-right: 0
}
.head-portrait-box .head-portrait image{
  width: 99rpx;
  height: 99rpx;
  border-radius: 50%
}
.head-portrait .bg-colonel image{
  width: 64rpx;
  height: 28rpx;
}
.head-portrait .bg-colonel text{
  font-family: PingFangSC-Medium;
  font-size: 18rpx;
  color: #FFFFFF;
  letter-spacing: 0;
  text-align: center;
  position: absolute;
  display: inline-block;
  width: 62rpx;
  left: 0;
  top: 12rpx
}
.head-portrait .bg-colonel{
  position: absolute;
  bottom: 13rpx;
  width:64rpx;
  height:28rpx;
  left: 20rpx
}
.fail-text{
  font-family: PingFangSC-Regular;
  font-size: 30rpx;
  color: #999999;
  margin: 40rpx 0 50rpx;
}