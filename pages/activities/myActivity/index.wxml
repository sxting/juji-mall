<wxs src="../../../utils/numFr.wxs" module="format" />
<view class="fullScreen">
    <view class="main p10">
        <view class="orderItem" wx:for="{{orderlist}}" wx:for-item="item" wx:key="unique">
            <view class="ub ub-ac ub-pj top">
                <view class="type">{{activityTxt}}</view>
                <view class="doing" wx:if="{{item.progresses.length<item.participantQuantity}}">{{activityTxt}}中</view>
                <view class="done" wx:if="{{item.progresses.length==item.participantQuantity}}">{{activityTxt}}成功</view>
            </view> 
            <view class="ub ub-ac info" bindtap="toDetail" data-activityorderid="{{item.activityOrderId}}" data-activitytype="{{item.activityType}}" data-productid="{{item.productId}}" data-activityid="{{item.activityId}}">
                <image class="goodImg udb" src="{{constant.basePicUrl}}{{item.cover}}/resize_180_180/mode_fill"></image>
                <view class="ub-f1 goodMsg">
                    <view class="goodTit">{{item.productName}}</view>
                    <view class="storeName">{{item.participantQuantity}}人团</view>
                    <view class="goodAmount">
                        <text>{{format.toFix(item.currentSalesPrice)}}元</text><text class="origin">{{format.toFix(item.originalPrice)}}元</text>
                    </view>
                </view>
            </view>
            <view class="ctrl plr15 ub ub-ac ub-pj" wx:if="{{item.progresses.length<item.participantQuantity}}">
                <view wx:if="{{type == 'SPLICED'}}">
                    <child dataFromParent='{{item.expirationTime}}'></child>
                </view>
                <view class="yao ub ub-ac ub-pc">邀请好友{{activityTxt}}</view>
            </view>
            <view class="ctrl plr15 ub ub-ac ub-pj" wx:if="{{item.progresses.length==item.participantQuantity}}">
                <view class="left">
                  <text class="headImg"></text>
                </view>
                <view wx:if="{{type == 'SPLICED'}}" class="use ub ub-ac ub-pc" bindtap="toUse" data-activityorderid="{{item.activityOrderId}}">去使用</view>
                <view wx:if="{{type == 'BARGAIN'}}" class="use ub ub-ac ub-pc" bindtap="toUse" data-activityorderid="{{item.activityOrderId}}">立即付款</view>
            </view>
        </view>
        <view class="nodataDiv ub ub-ac ub-ver" hidden="{{!isShowNodata}}">
            <image class="nodataImg" src="../../../images/null2.png"></image>
            <view class="nodataTxt">
              <view>您还未进行过{{activityTxt}}活动</view>
            </view>
        </view>
    </view>
</view>