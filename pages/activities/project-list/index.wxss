/* pages/activities/project-list/index.wxss */
page{height:100%;background-color:#fff;}
.juzihl-wrap{background:#fff;padding:40rpx 30rpx 30rpx 30rpx;height: 100%;box-sizing:border-box;}
.fixed-button{position:fixed;right:-125rpx;top:70%;width:210rpx;height:84rpx;background:#E83221;box-shadow:0 0 5rpx 1rpx #E83221;border-radius:45rpx 0 0 45rpx;line-height:84rpx;z-index:1000;transition: all .3s ease;}
.fixed-button .type-icon{width:66rpx;height:66rpx;border-radius:50%;background-color:#FFFFFF;margin:0 10rpx;line-height:66rpx;text-align:center}
.fixed-button .type-icon image{width:50rpx;height:35rpx;border-radius:50%;padding-top:14rpx;}
.fixed-button .kanjia-icon image{width:45rpx;height:45rpx;padding-top:12rpx;}
.fixed-button text{font-family:PingFangSC-Medium;font-size:28rpx;color:#FFFFFF;letter-spacing:0;text-align:center;}
.mtitle{font-size:40rpx;color:#333;font-weight:bold;}
.subtitle{font-size:24rpx;color:#999;margin-top:10rpx;}
.mRow{display:flex;}
.jc-sb{justify-content:space-between;}
.moreWrap{display:flex;align-items:center;padding-top:10rpx;padding-left:10rpx;}
.more{font-size:24rpx;color:#999;margin-right:10rpx;}
.labels-wrap{display:flex;align-items:center;margin-top:20rpx;}
.label{width:86rpx;height:34rpx;background:#d4d4d4;border-radius:4rpx;display:flex;justify-content:center;align-items:center;font-size:20rpx;color:#fff;margin-right:20rpx;}
.label-active{background:#ffdc00;color:#333;}
.jingxuanlist{box-shadow:0 5px 5px 3px rgba(229,229,229,0.50);border-radius:10rpx;margin-top:30rpx;margin-bottom:30rpx;}
.jingxuanlist .productImg{width:100%;height:320rpx;border-top-left-radius:10rpx;border-top-right-radius:10rpx;}
.dis-wrap{display:flex;align-items:center;margin-top:10rpx;padding:0 30rpx;}
.from{font-size:22rpx;color:#999;}
.dis{font-size:22rpx;color:#999;}
.pro-name{font-size:28rpx;color:#333;margin-top:15rpx;display:-webkit-box;overflow:hidden;text-overflow:ellipsis;-webkit-line-clamp:2;-webkit-box-orient:vertical;padding:0 30rpx;}
.price-wrap{display:flex;align-items:center;margin-top:20rpx;padding:0 30rpx;line-height:38rpx;}
.p-wrap{display:flex;align-items:flex-end;}
.now-price{font-size:38rpx;line-height:38rpx;color:#e83221;font-weight:bold;}
.now-text{font-size:24rpx;line-height:24rpx;color:#e83221;font-weight:bold;margin-bottom:3rpx;}
.old-price{font-size:22rpx;color:#999;text-decoration:line-through;margin-left:20rpx;}
.count{font-size:24rpx;color:#999;}
.ctrlbtn{width:140rpx;height:60rpx;font-size:26rpx;display:flex;align-items:center;justify-content:center;padding:0;box-sizing:border-box;background-color:#e83221;border-radius:6rpx;color:#fff;}
.had-bottom{display:block;line-height:100rpx;width:100%;height:100rpx;font-size:24rpx;color:#999;text-align:center;background-color:#fff;}
.nodataDiv{padding-top: 260rpx;height: 900rpx;}
