<view style="height:100%;background:#ffffff;padding:30rpx;">
  <view class="ub ub-ac ub-pj">
    <input type="text" placeholder="请输入手机号" name="tel" bindinput="dataChange1" placeholder-style="color:#999999;font-size:28rpx;" maxlength="11" focus="true" class="bindInput" />
    <view style="width:200rpx;height:88rpx;" class="bindphoneBtn active" wx:if="{{false}}">授权手机号</view>
  </view>
  <view class="ub ub-ac ub-pj" style="margin-top:30rpx;">
    <input type="text" placeholder="请输入验证码" name="pwd" bindinput="dataChange2"  placeholder-style="color:#999999;font-size:28rpx;" class="bindInput" />
    <view style="width:200rpx;height:88rpx;" class="bindphoneBtn active" hidden="{{showTime}}" maxlength="6" bindtap="getCode">获取验证码</view>
    <view style="width:200rpx;height:88rpx;" class="bindphoneBtn active" hidden="{{!showTime}}">{{count}}秒</view>
  </view>
  <view class="normal {{intextReady?'active':''}}" bindtap="submit">确认绑定</view>
</view>
