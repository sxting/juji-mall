@import '../../../../style/iconfont.wxss';

.iconfont {
  display: flex;
  align-items: center;
  justify-content: center;
}

.HycardItem {
  display: flex;
  position: relative;
  background: #fff;
  box-shadow: 0 2px 3px 0 #f8f0ff;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
}

.HycardName {
  font-size: 14px;
  color: #333;
}

.Hycardprice {
  font-size: 12px;
  color: #ff5a1d;
  margin-top: 24rpx;
}

.numPickerWrap {
  position: absolute;
  right: 30rpx;
  top: 54rpx;
  width: 124rpx;
  height: 46rpx;
  background: #fff;
  border: 0 solid #eee;
  box-shadow: inset 0 0 2px 0 rgba(209, 209, 209, 0.50);
  border-radius: 2px;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.reduce {
  background: #fff;
  box-shadow: 0 1px 2px 0 rgba(219, 219, 219, 0.50);
  border-radius: 2px 0 0 2px;
  font-size: 18px;
  color: #333;
  width: 42rpx;
  height: 42rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.num-result {
  width: 42rpx;
  height: 42rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #333;
}

.plus {
  background: #fff;
  box-shadow: 0 1px 2px 0 rgba(219, 219, 219, 0.50);
  border-radius: 0 2px 2px 0;
  font-size: 18px;
  color: #333;
  width: 42rpx;
  height: 42rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.radioWrap {
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  height: 100%;
  padding:5rpx 10rpx 0 0;
}

.icon-dianzan {
  width: 24rpx;
  height: 24rpx;
  color: #333;
  font-size: 16px;
}
.radio{
  width:32rpx;
  height:32rpx;
}
