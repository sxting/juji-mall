
.modal {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1;
}
.iconfont {
  display: flex;
  align-items: center;
  justify-content: center;
}
.icon_close {
  width: 24rpx;
  height: 24rpx;
  position: absolute;
  top: 40rpx;
  right: 30rpx;
}
.HycardView {
  position: fixed;
  width: 100%;
  left: 0;
  bottom: 0;
  background: #f8f9fa;
  border-radius: 20rpx 20rpx 0 0;
  z-index: 2;
  box-sizing: border-box;
}

.HycardsWrap {
  margin-top: 14rpx;
  padding: 0 32rpx;
}
.shopHeader {
  text-align: center;
  line-height: 100rpx;
  font-size: 30rpx;
  color: #000;
}
.hejiWrap {
  padding: 30rpx;
  background: #fff;
}

.heijirow {
  padding: 20rpx 0;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.hejibox {
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 18px;
}

.hejititle {
  font-size: 14px;
  color: #333;
}

.heji {
  font-size: 14px;
  color: #ff7846;
  margin-left: 20rpx;
}

.hejizhifubtn {
  width: 100%;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background-image: linear-gradient(-180deg, #b45fff 4%, #9649fa 99%);
  box-shadow: 0 0 2px 1px #dcb9fb;
  border-radius: 44rpx;
  font-size: 14px;
  color: #fff;
}
