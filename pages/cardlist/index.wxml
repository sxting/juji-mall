
    <view class="main_cardlist">
        <view class="cardsWrap">
            <view class="cardItem {{current==index?'':'h148'}}" wx:for="{{cardList}}" wx:key="{{index}}" wx:for-item="item">
                <view class="cardInfo ub ub-ac" bindtap="toggleCard" data-index="{{index}}">
                    <image src="{{item.logo?'https://upic.juniuo.com/file/picture/'+item.logo+'/resize_200_200/mode_fill':''}}" class="shopLogo"></image>
                    <view class="ub-f1">
                        <view class="cardInfoRow">
                            <view class="shopName">{{item.merchantName}}</view>
                            <view class="ncardNo">NO.{{item.id}}</view>
                        </view>
                        <view class="cardInfoRow">
                            <view class="cardType">储值卡会员</view>
                        </view>
                    </view>
                </view>
                <view class="blanceRow" bindtap="toggleCard" data-index="{{index}}">
                    <view class="blanceTitle">余额</view>
                    <view class="blanceWrap">
                        <view class="blanceMark">￥</view>
                        <view class="blanceText">{{item.balance}}</view>
                    </view>
                </view>
                <view class="btnGroup ub">
                    <view class="tx-c cardbtn" bindtap="toRecord">消费记录
                        <image class="cardbtnArrow" src="../../images/arrow-next.png" style="width:26rpx;height:30rpx;"></image>
                    </view>

                </view>
            </view>
        </view>

    <image src="../../images/juji.png" alt="" class="shuiyin" style="width:120rpx;height:40rpx;"></image>
    </view>

