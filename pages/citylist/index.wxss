/* pages/search/index.wxss */
.search-wrap{
  height:148rpx;
  padding:30rpx 30rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
}
.searchInput{
  width:100%;
  position: relative;
  height:88rpx;
  background:#fff;
  border-radius: 24px;
  padding:24rpx 30rpx;
  box-sizing: border-box;
  display: flex;
  align-items: center;
}
.searchIn{
  width:100%;
  height:40rpx;
  background:#fff;
  font-size: 28rpx;
  margin-right: 54rpx;
  margin-top:2rpx;
  box-sizing: border-box;
  vertical-align: middle;
}
.searchBtn{
  position: absolute;
  top:26rpx;
  right: 38rpx;
  width:34rpx;
  height:34rpx;
  color:#fff;
  font-size: 28rpx;
  background: url(data:image/png;base64,);
  background-size: 100% 100%;
}
.search-result{
  padding:0 30rpx;
}

.resWrap{
  margin-top:200rpx;
  text-align: center;
  font-size: 28rpx;
  color:#999;
}

.closeSearch{
  margin-top:20rpx;
  text-align: center;
  font-size: 28rpx;
}