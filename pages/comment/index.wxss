page{box-sizing:border-box;height: 100%;background-color: #fff}

.merchantInfo{height: 160rpx;background-color: #fff;padding: 20rpx 20rpx 0;}
.merchantDiv{height:100%;background-color: #fbfbfb;padding-left: 20rpx; }
.merchantImg{width: 120rpx;height: 120rpx;margin-right: 20rpx;background-color: #fff;border-radius: 8rpx;}
.merchantDiv .txt{font-size: 28rpx;color: #333;}
.replyBox{padding: 30rpx;}
.pingDiv{height: 100rpx;background-color: #fff;}
.pingDiv .tit{font-size: 30rpx;color: #333;font-weight: bold;}
.icon_ping{width: 36rpx;height: 35rpx;display: block;margin-left: 12rpx;}
.replyInfo{padding-bottom: 30rpx;background-color: #fbfbfb;border-radius: 10rpx; padding-top: 1rpx;position:relative;padding: 30rpx;}
.replyDiv{width: 100%;min-height: 200rpx;font-size: 26rpx;color: #333;line-height: 52rpx;}
.uploadImglist{flex-wrap:wrap;margin-right: -20rpx;margin-bottom: -20rpx;}
