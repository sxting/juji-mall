.uploadImg image{width: 140rpx;height: 132rpx;border-radius: 10rpx;}
.uploadImg .tx-c{position: absolute;width: 100%;top: 75rpx;left: 0;font-size: 24rpx;color: #999}
.uploadImg .ion_del{width: 28rpx;height: 28rpx;top: -10rpx;right: -10rpx;position: absolute;}
.mt60{margin-top: 60rpx;}

.btn_common{background-image: linear-gradient(-90deg,#FCBF0A  0%, #FFDC00 100%);border-radius: 100px;height: 88rpx;text-align: center;line-height: 88rpx;font-size: 32rpx;color: #333;font-weight: bold}
