}

.gxboxBtnWrap {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-top: 50rpx;
}

.gxboxBtn {
  width: 280rpx;
  height: 80rpx;
  background-image: linear-gradient(-180deg, #b45fff 4%, #9649fa 99%);
  box-shadow: 0 0 2px 1px #dcb9fb;
  border-radius: 40rpx;
  font-size: 14px;
  color: #fff;
  text-align: center;
  line-height: 80rpx;
}
