.modal {
  position: fixed;
  width: 100%;
  left: 0;
  top: 0;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.gxbox {
  width: 80%;
  padding-bottom: 50rpx;
  background: #fff;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -262rpx;
  margin-left: -40%;
  border-radius: 10rpx;
}

.gxbox .title {
  position: relative;
  font-size: 15px;
  color: #333;
  padding: 40rpx 0;
  text-align: center;
}

.closeModal {
  position: absolute;
  right: 30rpx;
  top: 30rpx;
  font-size: 25px;
  color: #333;
}

.gxdetail {
  font-size: 14px;
  line-height: 60rpx;
