page{padding: 20rpx;box-sizing:border-box;}
.userInfo{ box-shadow: 0 0 10rpx #dedede;height: 170rpx;border-radius: 10rpx;box-sizing:border-box;position: relative;background-color: #fff}
.addrSelect{position: absolute;top: 40rpx;right: 40rpx;font-size: 24rpx;color: #999}
.userImg { width: 100rpx; height: 100rpx;border-radius:50%;margin:0 20rpx;border:1rpx #eee solid;}
.userName{font-size: 28rpx;color: #333;}
.balance{font-size: 24rpx;color: #999;margin-top: 10rpx;}
.inputBox{margin-top: 30rpx;border-radius: 10rpx;box-shadow: 0 0 10rpx #dedede;background-color: #fff;padding:20rpx 30rpx;}
.inputTit{font-size: 26rpx;color: #333}
.inputDiv{line-height: 60rpx;height: 60rpx;color: #333;font-size: 28rpx;}
.icon_drop{width: 24rpx;height: 16rpx;margin-left: 10rpx;}

.modal{position: fixed;width: 100%;left: 0;top: 0;height: 100%;background-color: rgba(0,0,0,0.3);z-index: 1}
.shopDiv{position: fixed;width: 100%;left: 0;bottom: 0;background-color: #fff;border-radius: 20rpx 20rpx 0 0;z-index: 2}
.icon_close{width: 24rpx;height: 24rpx;position: absolute;top: 40rpx;right: 20rpx;}
.shopHeader{text-align: center;line-height: 100rpx;font-size: 30rpx;color: #000;}
.shopList{height: 600rpx;overflow: scroll;}
.shopList view{height: 100rpx;line-height: 100rpx;font-size: 28rpx;color:#333;padding-left: 20rpx;background: #fff;}
.shopList view.on{background: #F8F9FA!important;}

.mt100{margin-top: 200rpx;}
.btn_common{background-image: linear-gradient(-180deg, #B45FFF 4%, #9649FA 99%);box-shadow: 0 0 2px 1px #DCB9FB;border-radius: 100px;height: 88rpx;text-align: center;line-height: 88rpx;font-size: 32rpx;color: #fff;}

.desBtn{width: 30rpx; height: 30rpx;display: block;margin-left: 16rpx;}
.h60{height: 60rpx;}
