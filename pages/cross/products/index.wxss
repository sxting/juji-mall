.app {
  -webkit-overflow-scrolling: touch;
}
img, input {
  border: 0;
  vertical-align: middle;
}
#app {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
button {
  border: 0;
  cursor: pointer;
  font-size: 12px;
  background-color: transparent;
  outline: 0;
}
input {
  outline: 0;
}

.ub {
  display: -webkit-flex;
  display: flex;
  position: relative;
}

.ub-ver {
  -webkit-flex-direction: column;
  flex-direction: column;
}

.ub-ac {
  -webkit-align-items: center;
  align-items: center;
}

.ub-pc {
  -webkit-justify-content: center;
  justify-content: center;
}

.ub-pj {
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

.ub-pe {
  -webkit-justify-content: flex-end;
  justify-content: flex-end;
}

.ub-pj1 {
  -webkit-justify-content: space-around;
  justify-content: space-around;
}

.ub-f1 {
  -webkit-flex: 1;
  flex: 1;
}


.main {
  background-color: #fff;
  height: 100%;
}

.bg {
  width: 100%;
  height: 20rpx;
  background-color: #333;
  padding-top: 105rpx;
}

.contentWrap {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.content {
  position: relative;
  padding: 40rpx;
  /* padding: 80rpx 40rpx 60rpx 40rpx; */
  background-color: #fff;
  box-shadow: 0 0 8rpx 0 rgba(207, 207, 207, 0.50);
  border-radius: 10rpx;
  top: -30rpx;
}


.rechargeDiv {
  height: 120rpx;
  margin-top: 60rpx;
}

.rechargeDiv .input {
  height: 100rpx;
  font-size: 70rpx;
  text-align: right;
  justify-content: flex-end;
  color: #333;
}

.btnWrap {
  margin-top: 50rpx;
}

.remark {
  font-size: 70rpx;
  color: #333;
}

.font50 {
  font-size: 50rpx;
}

.select {
  width: 40rpx;
  height: 40rpx;
  background: url(data:image/png;base64,) no-repeat center;
  background-size: 100% 100%;

  position: absolute;
  top: 20rpx;
  right: 14rpx;
}

.underBox {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

.youhuiWrap {
  padding: 20rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 28rpx;
  color: #6a3c12;
}

.jiesuanBtnWrap {
  padding: 0 30rpx;
  box-sizing: border-box;
}

.jiesuanBtn {
  display: flex;
  justify-content: center;
