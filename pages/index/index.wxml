                        <view class="pubuname mt05">{{item.productName}}</view>

                        <view class="priceDiv2" style="margin-top:2rpx;padding-right:20rpx;">
                            <view class="disflex">
                              <view class="pubuprice2" wx:if="{{item.price}}"><text class="f18">￥</text>{{filter.toFix(item.price)}}</view>
