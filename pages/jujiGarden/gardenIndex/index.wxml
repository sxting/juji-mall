<wxs src="../../../utils/numFr.wxs" module="format" />
<view class="wrap">
    <!-- 普通用户进入 1、普通用户 从没申请  2、桔民 从没申请过  -->
    <view class="wrap page-content new-page-1" wx:if="{{(role == 'UNDEFINED' && !applyLeader) || (role == 'MEMBER' && !applyLeader)}}">
      <view class='group-title-home'>
        <view class='btn-manger' bindtap="toPage" data-page="/pages/jujiGarden/managerRights/managerRights">桔长权益</view>
        <view class='title-home-page home-title'>邀请{{minInvitedMemberCount}}人可成为桔长</view>
        <view class='home-title'>单单享返利 件件享优惠</view>
      </view>
      <image src='/images/group-start.png' class='group-gift t180'></image>
      <view class='btn-box-invent t480' bindtap="apply">
        <image src='/images/sure-btn.png' class='sure-btn applyToManager'></image>
        <text class='text'>申请成为桔长<text class='iconfont icon-right'></text></text>
      </view>
      <view class='btn-new-person-box t375'>
        <view class='btn-new-person height453'>
          <view class='list-box'>
            <view class='list-infortext mb35'>
              <image src='/images/invent-icon.png' class='icon-type'></image>
              <image src='/images/01-one.png' class='icon-num'></image>
              <text class='text-detail'>邀请{{minInvitedMemberCount}}名新人入队</text>
            </view>
            <view class='list-infortext mb35'>
              <image src='/images/right-icon.png' class='icon-type'></image>
              <image src='/images/02-two.png' class='icon-num'></image>
              <text class='text-detail'>获得桔长资格</text>
            </view>
            <view class='list-infortext mb35'>
              <image src='/images/sale-money-icon.png' class='icon-type'></image>
              <image src='/images/03-three.png' class='icon-num'></image>
              <text class='text-detail'>推广商品最高得40%返利</text>
            </view>
          </view>
        </view>
      </view>
      <image src='/images/group-bottom.png' class='group-bottom'></image>
    </view>

    <!-- 桔员进入 桔民 申请过-->
    <view class="wrap page-content new-page-2" wx:if="{{role == 'MEMBER' && applyLeader}}">
      <view class='group-title-box'>
        <view class='btn-manger' bindtap="toPage" data-page="/pages/jujiGarden/managerRights/managerRights">桔长权益</view>
        <image src='/images/group-check.png' class='group-title'></image>
        <view class='check-progress'>
              <view class='clearfix my-team'>
                  <view class='fl'>
                    <text style='font-weight:bold;'>我的队伍 </text>
                    <text class='num'><text style='color:#F35308'>{{ hadNumber }}</text>/{{minInvitedMemberCount}}</text>
                  </view>
                  <view class='fr' wx:if='{{hadNumber != 0}}'>
                      <text catchtap="toPage" data-page="/pages/jujiGarden/userInfor/userInfor" data-role='{{role}}'>查看桔民</text>
                      <text class='iconfont icon-right'></text>
                  </view>
              </view>
              <view class='progress-box'>
                  <text wx:for="{{ juminNumList }}" wx:key="item" class="{{item == 'yes'? 'had-number' : ''}}"></text>
              </view>
          </view>    
      </view>
      <image src='/images/group-gift.png' class='group-gift'></image>
      <view class='btn-box-invent'>
        <image src='/images/sure-btn.png' class='sure-btn'></image>
        <button class="share-btn" open-type="share">邀请新人加入桔园<text class='iconfont icon-right'></text></button>
      </view>
      <view class='btn-new-person-box'>
        <view class='btn-new-person'>
          <view class='list-box'>
            <view class='list-infortext'>
              <image src='/images/invent-icon.png' class='icon-type'></image>
              <image src='/images/01-one.png' class='icon-num'></image>
              <text class='text-detail'>邀请{{minInvitedMemberCount}}名新人入队</text>
            </view>
            <view class='list-infortext'>
              <image src='/images/right-icon.png' class='icon-type'></image>
              <image src='/images/02-two.png' class='icon-num'></image>
              <text class='text-detail'>获得桔长资格</text>
            </view>
            <view class='list-infortext'>
              <image src='/images/sale-money-icon.png' class='icon-type'></image>
              <image src='/images/03-three.png' class='icon-num'></image>
              <text class='text-detail'>推广商品最高得40%返利</text>
            </view>
          </view>
        </view>
      </view>
      <image src='/images/group-bottom.png' class='group-bottom'></image>
    </view>

     <!-- 桔长进入实名认证 -->
    <view class='page new-page-3' wx:if="{{role == 'LEADER' && !isAuthed}}">
      <image class="title-page3" src="/images/group-sucess.png"></image>
      <view class='title-text'>接下来开启您的推广赚钱之旅</view>
      <image src='/images/orange-icon1.png' class='orange-icon orange-2'></image>
      <image src='/images/orange-icon2.png' class='orange-icon orange-1'></image>
      <view class='authentication-box'>
        <view class='authentication-progress-box'>
          <image src='/images/airport-icon.png' class='airport'></image>
          <image src='/images/popo-icon.png' class='popo'></image>
          <view class='authentication-progress'>
            <view class='my-team'>
              <input class='wechat-no' placeholder='请填写您的微信账号' value='{{ wechatId }}' bindinput="dataChange" data-type='wechatid' maxlength='20' placeholder-class='placeholder'></input>
              <input class='wechat-name' placeholder='请填写您的微信实名认证姓名' value='{{ name }}' bindinput="dataChange" data-type='name' maxlength='8' placeholder-class='placeholder'></input>
              <view>请如实填写以上信息，推广获得的收入将自动提现到微信零钱</view>
              <view class='btn-box' bindtap='submitUserInfor'>
                <image src='../../../images/sure-btn.png' class='sure-btn'></image>
                <text>确定</text>
              </view>
            </view>
          </view>
        </view>
      </view>
      <image src='/images/sucess-bottom.png' class='group-bottom'></image>
    </view>

    <!-- 桔长进入 -->
    <view class="page" wx:if="{{role == 'LEADER' && isAuthed}}">
        <view class="toper">
            <image class="udb topBg" src="../../../images/topBg.png" mode="scaleToFill"></image>
            <view class="topCon" style="padding:30rpx;">
                <view class="balance tx-c">{{ format.toFix(totalSettlementAmount) }}</view>
                <view class="remark tx-c">累计提现金额(元)</view>
                <view class="turnover ub ub-ac">
                    <view class="ub-f1 div" data-page="/pages/jujiGarden/incomeData/index?index=1&status=1" bindtap="toPage">
                        <view class="tx-c balance1">{{ format.toFix(todaySaleRebate) }}</view>
                        <view class="tx-c remark">今日销售收入(元)</view>
                    </view>
                    <view class="line"></view>
                    <view class="ub-f1 div l" data-page="/pages/jujiGarden/incomeData/index?index=1&status=1" bindtap="toPage">
                        <view class="tx-c balance1">{{ format.toFix(todaySettlementAmount) }}</view>
                        <view class="tx-c remark">今日提现金额(元)</view>
                    </view>
                </view>
            </view>
            <view class="qdBtn tx-c" bindtap="toPage" data-page="/pages/jujiGarden/withdrawRecord/index">提现明细</view>
        </view>
        <view class="userBox">
            <view class="ub ub-ac ub-pj" style="padding:30rpx;" bindtap="toPage" data-page="/pages/jujiGarden/myUser/index?role=LEADER">
                <view class="ub-f1" style="font-size: 30rpx;color: #333333;font-weight:bold">我的用户</view>
                <image src="../../../images/arrow-right.png" class="udb" style="width:12rpx;height:22rpx;margin-left:10rpx;"></image>
            </view>
            <view style="padding:0 30rpx;">
                <view style="height:1rpx;border-top:#eee 1rpx solid;"></view>
            </view>
            <view class="ub ub-ac ub-pj" style="padding: 0 10rpx;border-bottom:1rpx #eee solid">
                <view class="ub ub-ver ub-ac ub-pc user" bindtap="toPage" data-page="/pages/jujiGarden/myUser/index?role=LEADER">
                    <text class="orderBtnsNum">{{ invitedLeaderCount }}</text>
                    <text class="orderBtnsText">已邀桔长</text>
                </view>
                <view style='height:60rpx;width:1rpx;border-left:#eee 1rpx solid;'></view>
                <view class="ub ub-ver ub-ac ub-pc user" bindtap="toPage" data-page="/pages/jujiGarden/myUser/index?role=MEMBER">
                    <text class="orderBtnsNum">{{ invitedMemberCount }}</text>
                    <text class="orderBtnsText">已邀桔民</text>
                </view>
            </view>
        </view>
        <view class="udb plr15 invent-btn-box" style="margin-top:20rpx;">
          <button class="share-btn" open-type="share"></button>
          <image class="banner" src="/images/banner.png" mode="widthFix"></image>
        </view>
        <view style="margin-top:20rpx;" class="menu ub">
            <view class="ub-f1 ub ub-ver ub-ac ub-pc" bindtap="toPage" data-page="/pages/jujiGarden/recommend/index">
                <image src="../../../images/icon_tj.png"></image>
                <text class="itemTxt">商品推荐</text>
            </view>
            <view class="ub-f1 ub ub-ver ub-ac ub-pc r" bindtap="toPage" data-page="/pages/jujiGarden/recommendnew/index">
                <image src="../../../images/icon_sc.png"></image>
                <text class="itemTxt">邀新素材</text>
            </view>
        </view>
    </view>
</view>