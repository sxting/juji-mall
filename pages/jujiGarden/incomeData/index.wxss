page{box-sizing:border-box;height: 100%;background-color: #fbfbfb}

.tablist{height: 100rpx;background-color: #fff}
.tablist .tabItem{position: relative;font-size: 28rpx;color: #333;padding:0 30rpx;height: 100rpx;line-height: 100rpx;text-align: center;}
.tablist .tabItem .line{width:72rpx;height: 4rpx;background-color: #FFDC00;border-radius: 2rpx;position:absolute;bottom: 16rpx;left: 50%;margin-left: -36rpx;display: none;}
.tablist .tabItem.on{color:#333;font-size: 28rpx;font-weight: bold;}
.tablist .tabItem.on .line{display: block;}

.nodataDiv{padding-top: 260rpx;}

swiper{height: 320rpx;}
.cardItem{border-radius: 20rpx;width: 520rpx;height: 300rpx;}
.cardItem .card{width: 100%;height: 100%;}
.cardItem .con{padding: 30rpx;width: 520rpx;height: 300rpx;box-sizing:border-box;position: absolute;top: 0;left: 0;}
.remark1{margin-top: 20rpx;color: #333;font-size: 28rpx;}
.balance1{font-size: 46rpx;color: #000;font-family: "Arial";margin-top: 10rpx;}
.remark2{color: #333;font-size: 24rpx;}
.turnover{margin-top: 40rpx;height: 75rpx;}
.turnover .line{height: 60rpx;width: 1rpx;border-left:#999 2rpx solid;margin-left: 40rpx;}
.turnover .div{height: 75rpx;width: 110rpx;}
.turnover .l{margin-left:50rpx;}
.balance2{font-size: 30rpx;margin-top: 10rpx;font-family: "Arial"}


.item{background-color: #fff;position:relative;border-radius: 8rpx;overflow: hidden;margin-bottom: 20rpx;padding:24rpx 30rpx;}
.userImg{width: 60rpx;height: 60rpx;border-radius: 50%;margin-right: 20rpx;}
.name{font-size: 28rpx;margin-top: 10rpx;color: #333;}
.time{font-size:24rpx;margin-top:20rpx;color: #999;}
.remark{margin-top: 30rpx;font-size: 24rpx;color: #333333;}
.amount{margin-top: 30rpx;font-size: 26rpx;color: #333333;position: absolute;right: 20rpx;bottom: 20rpx}

.labels-wrap { display: flex; align-items: center;margin-top: 10rpx;}
.label { width: 106rpx; height: 40rpx; background: #d4d4d4; border-radius: 4rpx; display: flex; justify-content: center; align-items: center; font-size: 20rpx; color: #fff; margin-right: 20rpx; }
.label.active { background: #fcbf0a; color: #333; }