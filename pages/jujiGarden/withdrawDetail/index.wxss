.main{height:100%;overflow:auto;}
.toper{padding:30rpx;text-align:center}
.toper-box{width:100%;height:260rpx;background-color:#fff;box-shadow:0 0 5rpx 0 rgba(228,228,228,0.50);border-radius:10rpx;font-size:0}
.toper-box .balance{font-size:60rpx;color:#333;padding-top:40rpx;}
.toper-box .status{font-family:PingFangSC-Regular;font-size:28rpx;color:#666;margin:15rpx 0 20rpx}

/* 提现失败 */
.toper-box .status.fail-active{color:#E3080F;}

/* 提现处理中 */
.toper-box .status.activeing{color:#3CC56D;}
.toper-box .tips{font-family:PingFangSC-Regular;font-size:24rpx;color:#999999;}
.tit{line-height:60rpx;font-size:30rpx;color:#333;font-weight:bold;}
.mr20{margin-right:40rpx;}
.h50{height:1.0rpx;}
.content{padding:0 30rpx;}
.itemWrap{border-radius:8rpx;padding:24rpx 30rpx 15rpx;}
.item{padding:20rpx 0;}
.item .ub-f1{font-size:26rpx;color:#333;}
.item .txt{font-size:26rpx;color:#666;}
.service{font-size:24rpx;color:#999;height:100rpx;}
.service text{font-size:24rpx;color:#FFDC00;}