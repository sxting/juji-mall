.main{padding: 30rpx 30rpx 0;height: 100%;background-color: #fff;overflow-y:auto;}
.toper{height: 360rpx;background-image: linear-gradient(-90deg, #FCBF0A 0%, #FFDC00 100%);border-radius: 20rpx;box-sizing:border-box;}

.balance{font-size: 60rpx;color: #000;text-align: left;}
.remark1{color: #333;font-size: 24rpx;text-align: left;}

.balancelist{width: 85%;margin-top: 20rpx}
.balancelist view text{display: block;}
.balancelist view text.tit{font-size: 24rpx;color: #333333;}
.balancelist view.l text{text-align: left;}
.balancelist view.c text{text-align: center;}
.balancelist view.line{height: 50rpx;width: 1rpx;border-left:#999 2rpx solid;}
.balancelist view.r text{text-align: right;}
.balancelist view text.amount{font-size: 30rpx;color: #333333;margin-top: 10rpx;}

.remark2{margin-top: 30rpx;color: #333;font-size: 24rpx;}

.content{margin-top: 60rpx;padding-bottom:40rpx;}
.item{height: 150rpx;padding: 20rpx 20rpx 35rpx 40rpx;box-sizing:border-box; margin-top: -20rpx;}
.leftBg{width:28rpx;height:157rpx;position: absolute;top: 0;left: 0;}

.amount{font-size: 30rpx;color: 30rpx;}
.time{font-size: 24rpx;color: #999;margin-top: 10rpx;}
.status{font-size: 26rpx;color: #333;}
.arrow-r{width:12rpx;height:22rpx;margin-left:10rpx;}