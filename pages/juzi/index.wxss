.wrap{
  padding-bottom:40rpx;
}
.toper {
  height: 268rpx;
  background: #fcbf0a;
}

.userInfo {
  padding: 30rpx 30rpx 40rpx 30rpx;
}

.qd-title {
  font-family: PingFangSC-Semibold;
  font-size: 44rpx;
  line-height: 44rpx;
  color: #333;
}

.qd-text {
  font-size: 24rpx;
  line-height: 24rpx;
  color: #333;
  margin-top: 20rpx;
}

.vline {
  width: 2rpx;
  height: 60rpx;
  background: #eee;
  margin: 0 20rpx;
}

.qtitle {
  font-family: PingFangSC-Medium;
  font-size: 30rpx;
  color: #333;
}

.point-text-wrap {
  width: 600rpx;
  margin-top: 30rpx;
}

.point-text {
  width: 64rpx;
  font-size: 20rpx;
  color: #666;
  text-align: center;
}

.point-wrap {
  width: 600rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 0 14rpx;
}

.point {
  width: 30rpx;
  height: 30rpx;
}

.pline {
  width: 40rpx;
  height: 2rpx;
  background: #dedede;
}

.juzigzWrap {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.juzigz {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 590rpx;
  height: 534rpx;
  margin-left: -295rpx;
  margin-top: -267rpx;
  background: #fff;
  border-radius: 10rpx;
  box-sizing: border-box;
}

.line {
  position: absolute;
  bottom: 94rpx;
  width: 100%;
  height: 1rpx;
  background: #dedede;
}

.taskItem {
  padding: 40rpx 0;
  border-bottom: 1rpx solid #eee;
}

.taskItem:last-child {
  border-bottom: 0;
}

.taskBtn {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
  height: 50rpx;
  font-size: 28rpx;
  padding:0;
  box-sizing: border-box;
  border: 2rpx solid #ce463f;
  border-radius: 25px;
  color: #ce463f;
  background: transparent;
}

.normalBtn {
  width: 560rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: #fcbf0a;
  line-height: 88rpx;
  text-align: center;
  margin-top: 20rpx;
  font-family: PingFangSC-Medium;
}

.signedBtn{
  width: 560rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: #f5f5f5;
  color:#999999;
  line-height: 88rpx;
  text-align: center;
  margin-top: 20rpx;
  font-family: PingFangSC-Medium;
}
