<!--pages/juzihl/index.wxml-->
<view>

  <view class="juzihl-wrap">
    <view style="display:flex;justify-content: space-between;align-item:center;">
      <view class="mtitle">桔子换礼</view>
      <view class="location">北京
        <image style="width:16rpx;height:10rpx;margin-left:10rpx;" src="../../images/sort-down.png"></image>
      </view>
    </view>
    
    <view class="subtitle" style="margin-top:10rpx;">让生活“换”然一新</view>
    <view class="labels-wrap">
      <view class="label {{sortIndex==1?'label-active':''}}" data-label="1" bindtap="toggleLabel">综合</view>
      <view class="label {{sortIndex==2?'label-active':''}}" data-label="2" bindtap="toggleLabel">买得起</view>
      <view class="label {{sortIndex==3?'label-active':''}}" data-label="3" bindtap="toggleLabel">橘子</view>
      <view class="label {{sortIndex==4?'label-active':''}}" data-label="4" bindtap="toggleLabel">价格</view>
      <view class="label {{sortIndex==5?'label-active':''}}" data-label="5" bindtap="toggleLabel">距离</view>
      <view class="label {{sortIndex==6?'label-active':''}}" data-label="6" bindtap="toggleLabel">销量</view>
    </view>
    <view class="jingxuanlist" wx:for="{{recommendPage}}" wx:key="{{index}}">
      <image style="width:100%;height:330rpx;margin-top:30rpx;" src="../../images/homeBanner.png"></image>
      <view class="dis-wrap jc-sb">
        <view class="from">{{item.providerName}}</view>
        <view class="dis">距你{{item.nearDist}}m</view>
      </view>
      <view class="pro-name">{{item.productName}}</view>
      <view class="price-wrap jc-sb">
        <view class="p-wrap">
          <view class="now-price">¥ {{item.price}}</view>
          <view class="old-price">¥ {{item.originalPrice}}</view>
        </view>
        <view class="count">已售{{item.soldNum}}件</view>
      </view>
    </view> 

  </view>
</view>