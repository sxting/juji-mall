/* pages/juzihl/index.wxss */

.juzihl-wrap {
  background: #fff;
  padding: 30rpx;
  background-image:linear-gradient(-180deg, #FFFFFF 2%, #F5F5F5 9%);
}

.mtitle {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.mRow {
  display: flex;
  align-items: center;
}

.jc-sb {
  justify-content: space-between;
}

.moreWrap {
  display: flex;
  margin-bottom: 10rpx;
  align-items: center;
}

.more {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.labels-wrap {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.label {
  width: 86rpx;
  height: 34rpx;
  background: #d4d4d4;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  margin-right: 20rpx;
}

.label-active {
  background: #FFDC00;
  color: #333;
}
.newproductDiv {
  padding-top: 30rpx;
}
.pubuItem {
  width:48.5%;
  display:flex;
  flex-direction:column;
  box-shadow:0 4rpx 10rpx 0 rgba(228, 228, 228, 0.50);
  border-radius:8rpx;
  padding-bottom:16rpx;
  position:relative;
  overflow:hidden;
  float:left;
  margin-bottom:20rpx;
  background-color:#fff;
  max-height:312rpx;
  height: 312rpx;
}
.newproductDiv .pubuItem:nth-child(even) {
  margin-left:3%;
}
.plimg {
  width:100%;
  height:188rpx;
  position:relative;
  display:block;
  background-color:#e7e7e7;
}
