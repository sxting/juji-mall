/* pages/juzihl/index.wxss */

.juzihl-wrap {
  background: #fff;
  padding: 30rpx;
}

.mtitle {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.mRow {
  display: flex;
  align-items: center;
}

.jc-sb {
  justify-content: space-between;
}

.moreWrap {
  display: flex;
  margin-bottom: 10rpx;
  align-items: center;
}

.more {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.labels-wrap {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.label {
  width: 86rpx;
  height: 34rpx;
  background: #d4d4d4;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  margin-right: 20rpx;
}

.label-active {
  background: #fcbf0a;
  color: #333;
}

.dis-wrap {
  display: flex;
  align-items: center;
  margin-top: 5rpx;
}

.from {
  font-size: 22rpx;
  color: #999;
}

.dis {
  font-size: 22rpx;
  color: #999;
}

.pro-name {
  font-size: 28rpx;
  color: #333;
  margin-top: 15rpx;
}

.price-wrap {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}

.p-wrap {
  display: flex;
  align-items: center;
}

.now-price {
  font-size: 28rpx;
  color: #e83221;
}

.old-price {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
  text-decoration: line-through;
}

.count {
  font-size: 22rpx;
  color: #999;
}
.locationWrap {
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.xIcon{
  transition: all .3 ease;
}
.rotate{
  transform: rotate(180deg);
}