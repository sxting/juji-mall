/* pages/juzihl/index.wxss */

.juzihl-wrap {
  background: #fff;
  padding: 30rpx;
}

.mtitle {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}

.subtitle {
  font-size: 24rpx;
  color: #999;
}

.mRow {
  display: flex;
  align-items: center;
}

.jc-sb {
  justify-content: space-between;
}

.moreWrap {
  display: flex;
  margin-bottom: 10rpx;
  align-items: center;
}

.more {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}

.labels-wrap {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.label {
  width: 86rpx;
  height: 34rpx;
  background: #d4d4d4;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  margin-right: 20rpx;
}

.label-active {
  background: #fcbf0a;
  color: #333;
}

.jingxuanlist{
  box-shadow: 0 5px 5px 3px rgba(229,229,229,0.50);
  border-radius: 10rpx;
  margin-top: 30rpx;
}

.jingxuanlist .productImg{
  width:100%;
  height:387rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}
.dis-wrap {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
  padding: 0 30rpx;
}

.from {
  font-size: 22rpx;
  color: #999;
}

.dis {
  font-size: 22rpx;
  color: #999;
}

.pro-name {
  font-size: 28rpx;
  color: #333;
  margin-top: 15rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding:0 30rpx;
}

.price-wrap {
  display: flex;
  align-items: center;
  margin-top: 14rpx;
  padding: 0 30rpx;
}

.p-wrap {
  display: flex;
  align-items: center;
}

.now-price {
  font-size: 30rpx;
  color: #e83221;
  font-weight: bold;
}

.old-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.buyBtn{
  width:106rpx;
  height: 50rpx;
  border: 2rpx solid #E83221;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #E83221;
  display: flex;
  align-items: center;
  justify-content: center;
  margin:0;
  padding: 0;
  box-sizing: border-box;
  background: #fff;
}

.locationWrap {
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.xIcon{
  transition: all .3 ease;
}
.rotate{
  transform: rotate(180deg);
}