.pubuname {
  font-size:24rpx;
  color:#333;
  display:-webkit-box;
  overflow:hidden;
  text-overflow:ellipsis;
  -webkit-line-clamp:2;
  -webkit-box-orient:vertical;
  padding-left:20rpx;
  padding-right:20rpx;
  height:70rpx;
  line-height:32rpx;
}

.price-wrap {
  display: flex;
  align-items: center;
  margin-top: 14rpx;
  padding: 0 30rpx;
}

.p-wrap {
  display: flex;
  align-items: center;
}

.now-price {
  font-size: 30rpx;
  color: #e83221;
  font-weight: bold;
}

.old-price {
  font-size: 22rpx;
  color: #999;
  text-decoration: line-through;
}

.count {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.buyBtn{
  width:106rpx;
  height: 50rpx;
  border: 2rpx solid #E83221;
  border-radius: 6rpx;
  font-size: 26rpx;
  color: #E83221;
  display: flex;
  align-items: center;
  justify-content: center;
  margin:0;
  padding: 0;
  box-sizing: border-box;
  background: #fff;
}

.locationWrap {
  background-color: #fff;
  padding: 0 30rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.location {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
}

.xIcon{
  transition: all .3 ease;
}
.rotate{
  transform: rotate(180deg);
}

.ysqMark{
  width:100%;height:100%;position:absolute;top:0;left:0;background: rgba(0,0,0,.5);
}
.ysqMark image{
  width: 140rpx;
  height: 62rpx;
  position:absolute;
  top:50%;
  left:50%;
  margin-left: -70rpx;
  margin-top: -31rpx;
}

