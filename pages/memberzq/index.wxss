.juzihl-wrap {
  background: #fff;
  padding: 30rpx;
  background-image:linear-gradient(-180deg, #FFFFFF 2%, #F5F5F5 9%);
}
.mtitle {
  font-size: 40rpx;
  color: #333;
  font-weight: bold;
}
.subtitle {
  font-size: 24rpx;
  color: #999;
}
.mRow {
  display: flex;
  align-items: center;
}
.jc-sb {
  justify-content: space-between;
}
.moreWrap {
  display: flex;
  margin-bottom: 10rpx;
  align-items: center;
}
.more {
  font-size: 28rpx;
  color: #999;
  margin-right: 10rpx;
}
.labels-wrap {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}
.label {
  width: 86rpx;
  height: 34rpx;
  background: #d4d4d4;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 20rpx;
  color: #fff;
  margin-right: 20rpx;
}
.label-active {
  background: #FFDC00;
  color: #333;
}
.newproductDiv {
  padding-top: 30rpx;
}
