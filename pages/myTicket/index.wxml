<loginBox></loginBox>
<view class="fullScreen ub ub-ver">
    <view class="toper">
        <image class="ticketBanner" src="../../images/ticket.jpg"></image>
        <view class="circle ub ub-ac ub-pc ub-ver">
            <image class="signImg" src="../../images/sign.png"></image>
            <view class="tx-c txt1">{{coinInfo.coin}}</view>
            <view class="tx-c txt2" wx:if="{{coinInfo.signed==0}}" bindtap="sign">签到</view>
            <view class="tx-c txt3" wx:else>已签到</view>
        </view>
    </view>
    <view class="tablist">
        <view class="tablist ub ub-ac ub-pj1">
            <view wx:for="{{tablist}}" wx:key="unique" class="tabItem {{curTabIndex==index?'on':''}}" bindtap="switchTab" data-index="{{index}}">
                {{item}}<view class="line"></view>
            </view>
        </view>
    </view>
    <view class="main ub-f1" hidden="{{curTabIndex!=0}}">
        <view class="item ub ub-ac" wx:for="{{coinRuleList}}" wx:key="unique">
            <view class="ub-f1">
                <view class="cardType">{{item.name}}</view>
                <view class="desc1">
                    <image class="icon_ticket" src="../../images/ticket.png"></image>+{{item.award}}
                </view>
            </view>
        </view>
    </view>
    <view class="main ub-f1" hidden="{{curTabIndex!=1}}">
        <view class="item ub ub-ac" hidden="{{isShowNodata}}" wx:for="{{coinRecordList}}" wx:key="unique">
            <view class="ub-f1">
                <view class="cardType">{{item.name}}</view>
                <view class="desc2">{{item.dateCreated}}</view>
            </view>
            <view class="ub ub-ac">
                <image class="icon_ticket" src="../../images/ticket.png"></image>
                <text class="number1" wx:if="{{item.type==1}}">+{{item.coin}}</text>
                <text class="number2" wx:else>-{{item.coin}}</text>
            </view>
        </view>
        <view class="conDiv ub ub-ac ub-pc ub-ver" hidden="{{!isShowNodata}}">
            <image class="nodataImg" mode="widthFix" src="../../images/noTicket.png"></image>
            <view class="nodataTxt">快去做任务赚取银票哦~</view>
        </view>
    </view>
</view>
<register isShow="{{isShow}}" bind:action='changeUserStatus' />
