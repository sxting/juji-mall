<wxs src="../../utils/numFr.wxs" module="format" />
<view class="main">
    <view class="orderInfo1 p10">
        <view class="ub ub-ac info" wx:for="{{orderInfo.orderItemList}}" wx:key="{{index}}">
            <image class="goodImg udb" src="../../images/mendianimg.png"></image>
            <view class="ub-f1 goodMsg">
                <view class="goodTit">{{item.productName}}</view>
                <view class="storeName">{{item.merchantName}}</view>
                <view class="goodAmount">{{item.point}}桔子 <text wx:if="it.price!=0">({{item.price}}元)</text></view>
            </view>
        </view>
        <view class="tx-r total">合计：￥20.00</view>
    </view>
    <view class="ctrl plr15 ub ub-ac ub-pj">
        <view class="status">{{format.formatStatus(orderInfo.status)}}</view>
        <view wx:if="{{orderInfo.status=='CREATED'}}" class="btn" bindtap="toPay" data-id="{{item.orderId}}">立即支付</view>
        <view wx:if="{{orderInfo.status=='CONSUME'}}" class="btn" bindtap="toComment" data-id="{{item.orderId}}">立即评价</view>
    </view>
    <view class="orderInfo2">
        <view class="tx-c">888888888888888888888</view>
        <image class="udb" src="../../images/erwm.jpg"></image>
        <view class="div ub ub ub-ac ub-pj">
            <view class="txt">剩余有效期：90天</view>
            <view class="txt">可核销1次，已核销0次</view>
        </view>
    </view>
    <view class="orderInfo3 plr15 mt10">
        <view class="tit">订单信息</view>
        <view class="txt">订单编号：{{orderInfo.orderId}}</view>
        <view class="txt">下单时间：{{orderInfo.dateCreated}}</view>
    </view>
</view>