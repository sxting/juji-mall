page{box-sizing:border-box;height:100%;background-color:#fbfbfb}
.orderInfo1{background-color:#fff;position:relative;overflow:hidden;margin-bottom:20rpx;}
.orderInfo1 .info{padding:20rpx;background-color:#fbfbfb}
.orderInfo1 .total{font-size:24rpx;color:#333;height:72rpx;line-height:72rpx;padding-right:30rpx}
.goodImg{width:180rpx;height:180rpx;border-radius:8rpx;border:1rpx #eee solid;}
.goodMsg{margin-left:20rpx;}
.goodTit{font-size:30rpx;}
.storeName{font-size:24rpx;margin-top:10rpx;color:#999;}
.goodAmount{font-size:30rpx;margin-top:48rpx;color:#333;}
