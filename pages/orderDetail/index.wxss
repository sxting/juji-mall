.ctrl{height:88rpx;background-color:#fff;margin-top:20rpx;}
.ctrl .status{font-size:28rpx;color:#333;}
.ctrl .btn{border:1rpx solid #999999;border-radius:50rpx;width:160rpx;height:50rpx;text-align:center;line-height:50rpx;font-size:24rpx;color:#333;}
.item{height:100rpx;background-color:#fff;border-bottom:1rpx #eee solid;}
.itemTit{font-size:28rpx;}
.numberCtrl .ctlbtn{color:#999;width:40rpx;height:40rpx;display:block;background-color:#f5f5f5;}
.numberCtrl .num{width:60rpx;height:40rpx;text-align:center;font-size:24rpx;color:#333;background-color:#f5f5f5;line-height:40rpx;margin:0 10rpx;}

.orderInfo2 .tx-c{font-size:34rpx;color:#000;line-height:88rpx;}
