<wxs src="../../utils/numFr.wxs" module="format" />
<view class="fullScreen ub ub-ver">
    <view class="tablist">
        <view class="tablist ub ub-ac ub-pj1">
            <view wx:for="{{tablist}}" wx:key="unique" class="tabItem {{curTabIndex==index?'on':''}}" bindtap="switchTab" data-type="{{index}}" data-index="{{index}}" data-status="{{item.status}}">{{item.name}}<view class="line"></view>
            </view>
        </view>
    </view>
    <view class="main ub-f1 p10">
        <view class="orderItem" wx:for="{{orderlist}}" wx:for-item="item" wx:key="unique">
            <view class="ub ub-ac ub-pj top">
                <view class="status">{{ format.formatStatus(item.status)}}</view>
                <view class="restTime">剩余有效期90天</view>
            </view> 
            <view class="ub ub-ac info" bindtap="toDetail" data-id="{{item.orderId}}" wx:for="{{item.orderItemList}}" wx:for-item='it'>
                <image class="goodImg udb" src="../../images/mendianimg.png"></image>
                <view class="ub-f1 goodMsg">
                    <view class="goodTit">{{it.productName}}</view>
                    <view class="storeName">{{it.merchantName}}</view>
                    <view class="goodAmount">{{it.point}}桔子 <text wx:if="it.price!=0">({{it.price}}元)</text></view>
                </view>
            </view>
            <view class="tx-r total">合计：￥20.00</view>
            <view class="ctrl plr15 ub ub-ac ub-pj" hidden="{{item.status=='REFUND'||item.status=='CLOSE'}}">
                <view class="left">您已成功付款，请到店展示消费码消费</view>
                <view wx:if="{{item.status=='PAID'}}" class="right" bindtap="toDetail" data-id="{{item.orderId}}">立即使用</view>
                <view wx:if="{{item.status=='CREATED'}}" class="right" bindtap="toDetail" data-id="{{item.orderId}}">立即付款</view>
                <view wx:if="{{item.status=='CONSUME'}}" class="right" bindtap="toDetail" data-id="{{item.orderId}}">立即评价</view>
            </view>
        </view>
        <view class="nodataDiv ub ub-ac ub-pc ub-ver" hidden="{{!isShowNodata}}">
            <image class="nodataImg" src="../../images/null.png"></image>
            <view class="nodataTxt">订单为空~</view>
        </view>
    </view>
</view>