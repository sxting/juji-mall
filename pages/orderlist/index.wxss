page{box-sizing:border-box;height: 100%;background-color: #fbfbfb}

.tablist{height: 100rpx;background-color: #fff}
.tablist .tabItem{position: relative;font-size: 28rpx;color: #333;padding:0 40rpx;height: 100rpx;line-height: 100rpx;text-align: center;}
.tablist .tabItem .line{width:72rpx;height: 4rpx;background-color: #FFDC00;border-radius: 2rpx;position:absolute;bottom: 16rpx;left: 50%;margin-left: -36rpx;display: none;}
.tablist .tabItem.on{color:#333;font-size: 34rpx;}
.tablist .tabItem.on .line{display: block;}

.orderItem{background-color: #fff;position:relative;border-radius: 8rpx;overflow: hidden;margin-bottom: 20rpx;}
.orderItem .top{height: 88rpx;border-bottom: 1rpx #eee solid;padding-left: 30rpx;padding-right: 30rpx;}
.orderItem .top .status{font-size: 30rpx;color: #333;}
.orderItem .top .restTime{font-size: 24rpx;color: #999;}
.orderItem .info{padding: 20rpx;padding-bottom: 0}
.orderItem .total{font-size: 24rpx;color: #333;height: 72rpx;line-height: 72rpx;padding-right: 30rpx}
.goodImg{width: 180rpx;height: 180rpx;border-radius: 8rpx;border:1rpx #eee solid;}
.goodMsg{margin-left: 20rpx;}
.goodTit{font-size: 30rpx;}
.storeName{font-size: 24rpx;margin-top: 10rpx;color: #999;}
.goodAmount{font-size:30rpx;margin-top:48rpx;color:#E83221;}
.goodAmount text{margin-left:10rpx;font-size:24rpx;color:#999;text-decoration:line-through}
.goodMsg .num{position: absolute;bottom: 0rpx;right: 20rpx;color: #999;font-size: 22rpx;}
.orderItem .ctrl{height: 88rpx;border-top: 1rpx #eee solid;}
.orderItem .ctrl .left{font-size: 24rpx;color: #999;}
.orderItem .ctrl .right{border: 1rpx solid #999999;border-radius: 50rpx;width: 160rpx;height: 50rpx;text-align: center;line-height: 50rpx;font-size: 24rpx;color: #333;}
.orderItem .ctrl .right.pay{background-image: linear-gradient(-90deg, #FFDC00 0%, #FCBF0A 100%);border-radius: 50rpx;width: 160rpx;height: 50rpx;text-align: center;line-height: 50rpx;font-size: 24rpx;color: #333;border: none}

.item{height: 100rpx;background-color: #fff;border-bottom: 1rpx #eee solid;}
.itemTit{font-size: 28rpx;}
.numberCtrl .ctlbtn{color: #999;width: 40rpx;height: 40rpx;display: block;background-color: #f5f5f5;}
.numberCtrl .num{width: 60rpx;height:40rpx;text-align: center;font-size: 24rpx;color: #333;background-color: #f5f5f5;line-height: 40rpx;margin: 0 10rpx;}

