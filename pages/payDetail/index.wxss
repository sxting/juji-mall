/* pages/payDetail/index.wxss */

.toper {
  height: 264rpx;
  position: relative;
  background: #fff;
}

.ttWrap {
  width: 180rpx;
  height: 100rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-top: -50rpx;
  margin-left: -90rpx;
}

.t1,.syb {
  font-size: 50rpx;
  color: #be8531;
  text-align: center;
}

.t2 {
  font-size: 24rpx;
  text-align: center;
  color: #333;
}

.t3 {
  font-size: 26rpx;
  color: #333;
  padding: 30rpx;
}

.content {
  padding: 30rpx;
}

.box {
  width: 100%;
  background: #fff;
  background: #fff;
  border-radius: 8rpx;
  padding-bottom: 15rpx;
  margin-bottom: 30rpx;
}

.box .title {
  font-size: 26rpx;
  color: #333;
  position: relative;
  padding:20rpx 30rpx;
  margin-bottom: 15rpx;
}

.box .title::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f6f6f6;
}

.item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 15rpx 30rpx;
}

.label {
  font-size: 26rpx;
  color: #999;
}

.value {
  font-size: 26rpx;
  color: #333;
}
.barWrap{
  margin:30rpx auto;
}
canvas{width:664rpx;height:136rpx;margin: 0 auto;}