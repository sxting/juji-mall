page{box-sizing:border-box;height: 100%;background-color: #f5f5f5}
.tradeInfo{background-color: #fff;position:relative;}
.tradeInfo .info{background-color: #fbfbfb;border-radius: 8rpx}
.goodImg{width: 220rpx;height: 200rpx;border-radius: 8rpx;border:1rpx #eee solid;}
.goodMsg{margin-left: 20rpx;}
.goodTit{font-size: 30rpx;}
.storeName{font-size: 22rpx;margin-top: 10rpx;color: #999;}
.goodAmount{font-family: PingFangSC-Medium;font-size: 34rpx; margin-top: 80rpx;color: #E83221;}

.item{height: 100rpx;background-color: #fff;}
.line{
  height:1rpx;
  background: #EEEEEE;
}
.itemTit{font-family: PingFangSC-Medium;
font-size: 28rpx;
color: #333333;}
.numberCtrl .ctlbtn{color: #999;width: 40rpx;height: 40rpx;display: block;background-color: #f5f5f5;}
.numberCtrl .num{width: 60rpx;height:40rpx;text-align: center;font-size: 24rpx;color: #333;background-color: #f5f5f5;line-height: 40rpx;margin: 0 10rpx;}

.discountAmount{font-family: PingFangSC-Medium;
font-size: 28rpx;
color: #333333;}
.btn_bottom{height: 100rpx;position: fixed;bottom: 0;left: 0;width: 100%;box-sizing:border-box;}
.btn_bottom view{font-size: 30rpx;}
.btn_common{background-image: linear-gradient(-269deg, #FFDC00 0%, #FCBF0A 100%);height: 80rpx;border-radius: 44rpx;color: #000;font-size: 34rpx;width: 380rpx;font-weight: bolder;}