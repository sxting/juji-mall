page{box-sizing:border-box;height:100%;background-color:#f5f5f5}
.tradeInfo{background-color:#fff;position:relative;}
.tradeInfo .info{background-color:#fbfbfb;border-radius:8rpx}
.goodImg{width:220rpx;height:200rpx;border-radius:8rpx;border:1rpx #eee solid;}
.goodMsg{width:64%;height:200rpx;margin-left:20rpx;}
.goodTit{font-size:28rpx;display:-webkit-box;overflow:hidden;text-overflow:ellipsis;-webkit-line-clamp:2;-webkit-box-orient:vertical;}
.storeName{font-size:22rpx;margin-top:10rpx;color:#999;}
.goodAmount{font-size:30rpx;color:#E83221;}
.goodAmount text{font-weight: bold;}
.item{height:100rpx;background-color:#fff;}
.line{height:2rpx;background:#EEEEEE;margin-top:10rpx;}
.itemTit{font-size:28rpx;color:#333333;font-weight:bold;}
.numberCtrl .ctlbtn{color:#999;width:40rpx;height:40rpx;display:block;background-color:#f5f5f5;}
.numberCtrl .num{width:60rpx;height:40rpx;text-align:center;font-size:24rpx;color:#333;background-color:#f5f5f5;line-height:40rpx;margin:0 10rpx;font-weight:bold;}
.discountAmount{font-size:28rpx;color:#333333;}
.btn_bottom{height:120rpx;position:fixed;bottom:0;left:0;width:100%;box-sizing:border-box;background:#ffffff;}
.btn_bottom view{font-size:30rpx;}
.btn_common{background-image:linear-gradient(-269deg,#FFDC00 0%,#FCBF0A 100%);height:88rpx;border-radius:44rpx;color:#000;font-size:34rpx;width:380rpx;font-weight:bolder;}
.original-price{font-size:28rpx;color:#999999;letter-spacing:0;text-align:center;text-decoration:line-through;margin-left:25rpx}
.ty6{background:#E83221;color:#fff;}
.kanjia-price{padding:0 30rpx;background-color:#fff;}
.kjp-item{border-bottom:1rpx solid #EEEEEE;font-size:28rpx;color:#333333;height:120rpx;line-height:120rpx;}
.kjp-item text:last-child{float:right;}
.btnTxt{font-size:30rpx;font-weight:bold;}
.btnNum{font-size:30rpx;color:#E83121;font-weight: bold}
.remarkw{padding: 0 30rpx;background-color: #fff;}
.remarks{background:#fff;padding:24rpx 0;border-top: 1rpx #eee solid;}
.remark{font-size: 24rpx;color: #999999;line-height: 40rpx;}