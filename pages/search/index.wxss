/* pages/search/index.wxss */
.search-wrap{
  height:58rpx;
  padding:10rpx 30rpx;
  display:flex;
  justify-content: space-between;
  align-items: center;
  background: #fcbf0a;
}
.searchInput{
  width:590rpx;
  height:38rpx;
  background:#fff;
  border-radius: 19px;
  padding:10rpx 0 10rpx 20rpx;
  box-sizing: border-box;
  font-size: 24rpx;
  display:flex;
  align-items: center;
}
.searchInputPlaceholder{
  line-height: 18rpx;
  font-size: 24rpx;
}
.searchBtn{
  color:#fff;
  font-size: 28rpx;
  padding-right: 10rpx;
}