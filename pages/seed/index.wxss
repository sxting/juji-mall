.cateCommodity {
  display: flex;
  padding: 20rpx 28rpx 8rpx;
  box-sizing: border-box;
  font-size: 28rpx;
}
/* 左右两个容器 */
.leftContainer{
  display: flex;
  margin-right: 22rpx;
  flex-direction: column;
}
.rightContainer{
  display: flex;
  flex-direction: column;
}
/* 图片容器 */
.cateItem {
  margin-bottom: 20rpx;
  box-shadow:0 4rpx 10rpx 0 rgba(228,228,228,0.50);border-radius:8rpx;position:relative;overflow:hidden;background:#fff;
}
.item{
  padding:0;
  width: 335rpx;
  box-sizing: border-box;
  background: #fff;
  border-radius: 6rpx;
}
.itemImg{
  width: 100%;
  vertical-align: middle;
  border-radius: 6rpx;
  height: auto;
}
.title{
  font-size:28rpx;color:#333;display:-webkit-box;overflow:hidden;text-overflow:ellipsis;-webkit-line-clamp:2;-webkit-box-orient:vertical;padding:10rpx 20rpx;line-height:48rpx;
}