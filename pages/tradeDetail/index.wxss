page{padding: 20rpx;box-sizing:border-box;}
.tradeDiv{box-shadow: 0 0 10rpx #dedede;border-radius: 20rpx;overflow: hidden;background-color: #fff}
.userInfo{height: 170rpx;box-sizing:border-box;position: relative;}
.userImg {width: 100rpx; height: 100rpx;border-radius:50%;margin-right:20rpx;}
.userName{font-size: 28rpx;color: #333;}
.balance{font-size: 24rpx;color: #999;margin-top: 10rpx;}

.tradeInfo{background-color: #fff;position:relative;background-color: #fff;border-top: 1rpx #eee solid;}
.itemTit{font-size: 24rpx;color: #333333;}
.itemCon{font-size: 26rpx;color: #999999;}
.itemAmount{font-size: 26rpx;color: #FF5A1D}

.line{width: 100%;height: 2rpx;border-top:1rpx #eee solid;margin-top: 30rpx;margin-bottom: 10rpx;}

.payWays{background-color: #F8F9FA;padding: 20rpx;margin: 30rpx 0}
.payWays .item{height: 50rpx;}